#: import main Main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

<ProfileListButton>:
    on_press: root.change(*args)

<WorkingScreen>:

    control_points_input: control_points
    percentage_input: percentage
    profile_list: profiles

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: "40dp"
            orientation: "horizontal"
            Button:
                text: "Load profile"
                on_press: root.load_profile()

        BoxLayout:
            size_hint_y: None
            height: "40dp"
            orientation: "horizontal"
            Label:
                text:"Control points"
            TextInput:
                id: control_points
                input_filter: "int"
            Label:
                text:"% of some"
            TextInput:
                id: percentage
            Button:
                text: "Fit profiles"

        BoxLayout:

            orientation: "horizontal"

            ListView
                id: profiles
                adapter:
                    ListAdapter(data=[],cls=main.ProfileListButton,selection_mode='single')

            BoxLayout:
                id:drawing_box