<InitialScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Iso-Blade"

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "New blade"
                on_press: root.new_blade()

        BoxLayout:
            orientation: "horizontal"

            Button:
                text: "Load existing blade"


        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Exit"
                on_press: root.close_app()

<AnotherScreen>:
    BoxLayout:
        id:box_box
        Button:
            id:the_button
            text:"Hola"
            on_press: root.say_hi()
        BoxLayout:
            id:box_box2


<SaveDialog>:
    ##external_name: internal_name
    file_name: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            ##on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.dismiss()

            Button:
                text: "Save"
                on_release: root.save_file(filechooser.path,text_input.text)